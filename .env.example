# ==========================================
# MongoDB Configuration
# ==========================================

# Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/image_finder

# MongoDB with Authentication
# MONGODB_URI=mongodb://user:password@host:port/image_finder?authSource=admin

# MongoDB Atlas (Cloud)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/image_finder?retryWrites=true&w=majority

# Credentials for Docker
MONGO_USERNAME=admin
MONGO_PASSWORD=change_me_in_production

# ==========================================
# Server Configuration
# ==========================================

# Backend Port
PORT=3000

# Node Environment
NODE_ENV=development

# ==========================================
# Frontend Configuration
# ==========================================

# API URL for Frontend
VITE_API_URL=http://localhost:3000/api

# ==========================================
# Security & Performance
# ==========================================

# CORS Origin (production)
CORS_ORIGIN=https://yourdomain.com

# Rate Limit (requests per 15 minutes)
API_RATE_LIMIT=100

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# ==========================================
# Docker Specific
# ==========================================

# Docker Compose database service host
# (use 'mongodb' when running in Docker network)
# MONGODB_HOST=mongodb
# MONGODB_PORT=27017

