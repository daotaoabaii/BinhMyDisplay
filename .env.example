# ==========================================
# MongoDB Configuration
# ==========================================

# Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/image_finder

# MongoDB with Authentication
# MONGODB_URI=mongodb://user:password@host:port/image_finder?authSource=admin

# MongoDB Atlas (Cloud)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/image_finder?retryWrites=true&w=majority

# ==========================================
# Server Configuration
# ==========================================

# Backend Port
PORT=3000

# Node Environment
NODE_ENV=production

# ==========================================
# Frontend Configuration
# ==========================================

# API URL for Frontend
# Dev: http://localhost:3000/api
# Prod: /api (relative URL - same host)
VITE_API_URL=/api

# ==========================================
# Google APIs
# ==========================================

# Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Google Drive API Key (if needed)
GOOGLE_DRIVE_API_KEY=your_google_drive_key_here

# ==========================================
# Production Settings (for Railway)
# ==========================================

# CORS Origin (production)
CORS_ORIGIN=https://your-railway-app.railway.app

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Docker Compose database service host
# (use 'mongodb' when running in Docker network)
# MONGODB_HOST=mongodb
# MONGODB_PORT=27017

